@namespace MudBlazor.Docs.Examples

<MudEnhancedChart>
    <Legend>
        <MudEnhancedBarChartLegend LegendInfo="@context" />
    </Legend>
    <ToolTip>
        <MudEnhancedBarChartToolTip ToolTips="context.OfType<BarChartToolTipInfo>()" />
    </ToolTip>
    <Chart>
        <MudEnhancedBarChart>
            <DataSets>
                <MudEnhancedBarDataSet Name="pets in total per country" IsStacked="false">
                    <MudEnhancedBarChartSeries Id="@firstSeriesId" Name="cats" Points="firstSeriesPoints" />
                    <MudEnhancedBarChartSeries Id="@secondSeriesId" Name="dogs" Points="secondSeriesPoints" />
                </MudEnhancedBarDataSet>
                <MudEnhancedBarDataSet Name="pets per 100 habitants" IsStacked="false">
                    <MudEnhancedBarChartSeries Id="@thirdSeriesId" Name="cats per 100 inhabitants" Points="thirdSeriesPoints" />
                    <MudEnhancedBarChartSeries Id="@fourthSeriesId" Name="dogs per 100 inhabitants" Points="fourthSeriesPoints" />
                </MudEnhancedBarDataSet>
            </DataSets>
            <YAxes>
                <MudEnhancedNumericLinearAutoScaleAxis />
            </YAxes>
            <XAxis>
                <MudEnhancedBarChartXAxis Labels="@labels" />
            </XAxis>
        </MudEnhancedBarChart>
    </Chart>
</MudEnhancedChart>

@code { 

    private Guid firstSeriesId = Guid.NewGuid();
    private Guid secondSeriesId = Guid.NewGuid();
    private Guid thirdSeriesId = Guid.NewGuid();
    private Guid fourthSeriesId = Guid.NewGuid();

    private String[] labels = new[] { "France", "Germany", "Spain" };
    public Double[] firstSeriesPoints = new[] { 11.48, 8.2, 3.38 };
    public Double[] secondSeriesPoints = new[] { 5.3, 7.57, 4.72 };

    public Double[] thirdSeriesPoints = new[] { 14.0, 12.0, 7.0 };
    public Double[] fourthSeriesPoints = new[] { 6.0, 11.0, 10.0 };
 } 
