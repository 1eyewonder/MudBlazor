@namespace MudBlazor.Docs.Examples

<MudEnhancedChart>
    <Legend>
        <MudEnhancedBarChartLegend LegendInfo="@context" />
    </Legend>
    <ToolTip>
        <MudEnhancedBarChartToolTip ToolTips="context.OfType<BarChartToolTipInfo>()" />
    </ToolTip>
    <Chart>
        <MudEnhancedBarChart>
            <DataSets>
                <MudEnhancedBarDataSet Name="pets in Europe" IsStacked="true">
                    <MudEnhancedBarChartSeries Id="@firstSeriesId" Name="France" Points="firstSeriesPoints" />
                    <MudEnhancedBarChartSeries Id="@secondSeriesId" Name="Spain" Points="secondSeriesPoints" />
                    <MudEnhancedBarChartSeries Id="@thirdSeriesId" Name="Germany" Points="thirdSeriesPoints" />
                </MudEnhancedBarDataSet>
                <MudEnhancedBarDataSet Name="pets in the US" IsStacked="false">
                    <MudEnhancedBarChartSeries Id="@fourthSeriesId" Name="US" Points="fourthSeriesPoints" />
                </MudEnhancedBarDataSet>
            </DataSets>
            <YAxes>
                <MudEnhancedNumericLinearAutoScaleAxis />
            </YAxes>
            <XAxis>
                <MudEnhancedBarChartXAxis Labels="@labels" />
            </XAxis>
        </MudEnhancedBarChart>
    </Chart>
</MudEnhancedChart>

@code { 

    private Guid firstSeriesId = Guid.NewGuid();
    private Guid secondSeriesId = Guid.NewGuid();
    private Guid thirdSeriesId = Guid.NewGuid();
    private Guid fourthSeriesId = Guid.NewGuid();

    private String[] labels = new[] { "Cats", "Dogs"  };

    public Double[] firstSeriesPoints = new [] { 11.48,  7.57  };
    public Double[] secondSeriesPoints = new[] { 3.38,  4.72 };
    public Double[] thirdSeriesPoints = new[] { 8.2 , 5.3  };

    public Double[] fourthSeriesPoints = new[] { 74.06, 69,93 };
 } 
